# ------------------------------------------------------------
# Core LLM / Orchestration
# ------------------------------------------------------------
# Used by the multi-agent pipeline (AG2) for reasoning and coordination.
OPENAI_API_KEY=

# Default LLM configuration
LLM_MODEL=gpt-5.1
LLM_TEMPERATURE=0.2


# ------------------------------------------------------------
# Scientific Data Sources
# ------------------------------------------------------------

# Materials Project (used by the Materials Retriever agent)
MP_API_KEY=

# NASA FIRMS (active fire detection)
NASA_FIRMS_TOKEN=

# Topography / elevation data
OPENTOPO_API_KEY=

# Earthdata (NASA) credentials
EARTHDATA_USERNAME=
EARTHDATA_PASSWORD=


# ------------------------------------------------------------
# Optional External Providers
# ------------------------------------------------------------

# Weather / climate data
ECMWF_API_KEY=
NOAA_TOKEN=

# European Forest Fire Information System (optional)
EFFIS_WFS_URL=
EFFIS_WMS_URL=
EFFIS_WCS_URL=

# US National Interagency Fire Center (optional)
NIFC_FEATURESERVER_URL=


# ------------------------------------------------------------
# Runtime Defaults
# ------------------------------------------------------------

# Default region identifier used in demos and examples
DEFAULT_REGION_ID=ES-ANDALUCIA

# Default temporal window (in days) for data queries
DEFAULT_TIME_WINDOW_DAYS=7

# Runtime environment flag
ENVIRONMENT=dev
